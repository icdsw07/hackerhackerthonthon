<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leejeongheon.javapractice.MainActivity">

    <TextView
        android:id = "@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Google Map"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id = "@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/textview"-->
        <!--/>-->
    <Button
        android:id="@+id/upButton"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_marginLeft="250dip"
        android:layout_marginTop="380dip"
        android:text="UP"
        />
    <Button
        android:id="@+id/downButton"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_marginLeft="250dip"
        android:layout_marginTop="440dip"
        android:text="DOWN"
        />
    <Button
        android:id="@+id/leftButton"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_marginLeft="180dip"
        android:layout_marginTop="415dip"
        android:text="LEFT"
        />
    <Button
        android:id="@+id/rightButton"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_marginLeft="320dip"
        android:layout_marginTop="415dip"
        android:text="RIGHT"
        />

</RelativeLayout>
